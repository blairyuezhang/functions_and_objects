<html>
<head>
  <meta charset="UTF-8">
	<script language="javascript" type="text/javascript" src="../helpers/p5.js"></script>
  <style> body {padding: 0; margin: 0;} </style>
  <script>

		function setup() {

			createCanvas(windowWidth, windowHeight);

    }

    

	function draw() {
      
      var myFlag = new Flag("hotpink");

      
			myFlag.drawFlag();
	
  }

  

  function Flag(flagColor){
    this.drawFlag = function (){
      stroke(flagColor);
      noFill();

      for (var x=30; x>0; x--){
      rect(mouseX, mouseY, 300, 300);
    }
    }



  }




  </script>

</head>

